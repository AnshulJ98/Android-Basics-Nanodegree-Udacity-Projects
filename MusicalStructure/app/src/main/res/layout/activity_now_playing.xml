<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anshulj.musicalstructure.NowPlaying"
    android:layout_margin="24dp"
    android:padding="24dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="NowPlaying Activity (Now Playing)"
        android:textSize="28sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_centerInParent="true"
        android:text="This activity dsiplays current track and album art.It also contains controls for changing tracks.\nThis class plays music .\nA new new class with Get and set is used to fetch track names"/>
    <TextView
        android:id="@+id/songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textSize="24sp"
        android:textColor="#32B2B2"
        android:paddingBottom="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
